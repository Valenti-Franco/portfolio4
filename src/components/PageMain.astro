---
import Intro from "./Intro.astro";
---

<div id="home" class="containerPage"><Intro /></div>

<style>
  .containerPage {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(0, 224, 255);
    background: radial-gradient(
      circle,
      rgba(0, 224, 255, 0.4598214285714286) 42%,
      rgba(33, 33, 33, 1) 95%
    );
  }

  .container2 {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #222;
  }

  .bola {
    width: 194px;
    height: 201px;
    background: linear-gradient(180deg, #00ffd1 0%, #0cffd3 84%, #0cffd3 100%);
    border-radius: 9999px;
    animation: 1.5s alternate forwards BolaAnimation;
  }

  @keyframes BolaAnimation {
    0% {
      width: 194px;
      height: 201px;
      border-radius: 10%;
    }
    44% {
      width: 402px;
      height: 376px;
      border-radius: 70%;
    }
    66% {
      width: 402px;
      height: 376px;
      border-radius: 10%;
    }
    90% {
      border-radius: 70%;

      width: 80vw;

      height: 80vh;
    }

    100% {
      border-radius: 0;
      position: absolute;
      /* transform: rotateY(1000); */
      /* Final styles */

      width: 100vw;
      height: 100vh;
    }
  }

  @keyframes LogoAnimation {
    0% {
      width: 180px;
      height: 143px;
    }
    44% {
      width: 280px;
      height: 243px;
    }

    90% {
      width: 380px;
      height: 343px;
    }

    100% {
      width: 180px;
      height: 143px;
    }
  }
</style>
