    background: #222;
  } */

  .container3 {
    width: 100%;
    height: 175vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(0, 224, 255);
    background: radial-gradient(
      circle,
      rgba(0, 224, 255, 0.4598214285714286) 42%,
      rgba(33, 33, 33, 1) 95%
    );
  }
  .containerSection h1 {
    width: 100%;
    height: 33%;
    display: flex;
    color: #fff;
    text-align: center;

    font-size: 64px;
    font-style: normal;
    font-weight: 800;
    /* line-height: 110px; */
    align-items: center;
    justify-content: center;
  }
  .containerText {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  .h3 {
    color: #fff;
    text-align: center;

    font-size: 27px;
    font-style: normal;
    font-weight: 700;
    line-height: 45px; /* 166.667% */
  }

  .blink {
    opacity: 0;
  }
  .blink2 {
    opacity: 1;
  }
  .containerText p {
    width: 367.001px;
    color: #fff;
    text-wrap: pretty;

    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 45px; /* 187.5% */
    padding: 15px;
  }
  .container2 {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #222;
  }

  section {
    display: flex;
    flex-direction: column;
    width: min-content;
    padding: 15px;
    align-items: center;
  }
  .containerSection {
    width: 1200px;
    height: 175vh;
    display: flex;
    color: #fff;
    gap: 50px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #252525d0;
  }

  .bola {
    width: 194px;
    height: 201px;
    background: linear-gradient(180deg, #00ffd1 0%, #0cffd3 84%, #0cffd3 100%);
    border-radius: 9999px;
    animation: 1.5s alternate forwards BolaAnimation;
  }
  .ImgLogo {
    width: 180px;
    height: 143px;
    position: absolute;
    mix-blend-mode: darken;
    animation: 1.5s alternate forwards LogoAnimation;
  }

  @keyframes BolaAnimation {
    0% {
      width: 194px;
      height: 201px;
      border-radius: 10%;
    }
    44% {
      width: 402px;
      height: 376px;
      border-radius: 70%;
    }
    66% {
      width: 402px;
      height: 376px;
      border-radius: 10%;
    }
    90% {
      border-radius: 70%;

      width: 80vw;

      height: 80vh;
    }

    100% {
      border-radius: 0;
      position: absolute;
      /* transform: rotateY(1000); */
      /* Final styles */

      width: 100vw;
      height: 100vh;
    }
  }

  @keyframes LogoAnimation {
    0% {
      width: 180px;
      height: 143px;
    }
    44% {
      width: 280px;
      height: 243px;
    }

    90% {
      width: 380px;
      height: 343px;
    }

    100% {
      width: 180px;
      height: 143px;
    }
  }

  @media screen and (max-width: 1024px) {
    .h3 {
      padding: 15px;
      max-width: 600px;
    }
    .containerSection h1 {
      width: 90%;
      height: 100px;
      display: flex;
      color: #fff;
      text-align: center;

      font-size: 40px;
      font-style: normal;
      font-weight: 800;
      /* line-height: 110px; */
      align-items: center;
      justify-content: center;
    }

    .containerSection svg {
      display: none;
    }
    .containerText {
      display: flex;
      flex-direction: column;
    }
    .containerText p {
      padding: 0 10px 15px;
    }
    .containerSection {
      width: 100%;
      height: 100%;
    }
  }
</style>
